<% layout("./layout/boilerplate") %>

<div class="col-6 offset-3">
    <h2 class="text-center h3 mb-5">New User</h2>

    <form action="/users" method="POST">
        <div>
            <label class="form-label mt-3" for="name">Name </label>
            <input class="form-control" type="text" id="name" name="name" required>
        </div>
    
        <div>
            <label class="form-label mt-3" for="email">Email</label>
            <input class="form-control" type="email" id="email" name="email" required>
        </div>

      

        <div>
            <label class="form-label mt-3" for="pass">Password</label>
            <input class="form-control" type="password" id="pass" name="pass" required>
        </div>

        <input class="btn btn-success mt-3 w-100" type="submit" value="Add User">
    </form>
</div>